{
	"name": "product-microservice",
	"version": "1.0.0",
	"main": "dist/src/index.js",
	"scripts": {
		"build": "tsc",
		"start": "yarn build && cross-env NODE_ENV=release node dist/src/index.js",
		"dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
		"test": "jest",
		"test:verbose": "jest --collect-coverage",
		"typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
		"typeorm:migrate": "npm run typeorm migration:generate -- -n",
		"typeorm:run": "npm run typeorm migration:run"
	},
	"license": "MIT",
	"dependencies": {
		"@grpc/grpc-js": "^1.5.0",
		"@grpc/proto-loader": "^0.6.9",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"pg": "^8.7.1",
		"reflect-metadata": "^0.1.13",
		"tsyringe": "^4.6.0",
		"typeorm": "^0.2.41"
	},
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"jest": "^27.4.7",
		"ts-jest": "^27.1.2",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.5.4"
	}
}
